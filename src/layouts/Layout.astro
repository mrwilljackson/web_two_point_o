---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
  type?: string;
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  tags?: string[];
}

const {
  title = "PlayPhysio - Gamified Respiratory Therapy",
  description = "Gamified respiratory therapy solutions that make treatment engaging and effective for children and adults. Proven to increase therapy adherence by 94%.",
  image = "/favicon.png",
  canonical,
  type = "website",
  publishedTime,
  modifiedTime,
  author,
  tags = []
} = Astro.props;

// Get the current URL for canonical and Open Graph
const currentUrl = canonical || new URL(Astro.url.pathname, Astro.site).href;
const siteUrl = Astro.site?.href || process.env.SITE_URL || 'https://playphysio.com';
const siteName = process.env.SITE_NAME || 'PlayPhysio';
const fullImageUrl = image.startsWith('http') ? image : new URL(image, siteUrl).href;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<!-- Basic SEO -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<link rel="canonical" href={currentUrl} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content={currentUrl} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={fullImageUrl} />
		<meta property="og:site_name" content={siteName} />
		<meta property="og:locale" content="en_US" />
		{publishedTime && <meta property="article:published_time" content={publishedTime} />}
		{modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
		{author && <meta property="article:author" content={author} />}
		{tags.map(tag => <meta property="article:tag" content={tag} />)}

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={currentUrl} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={fullImageUrl} />
		<meta name="twitter:site" content="@playphysio" />
		<meta name="twitter:creator" content="@playphysio" />

		<!-- Additional SEO -->
		<meta name="robots" content="index, follow" />
		<meta name="author" content="PlayPhysio Team" />
		<meta name="theme-color" content="#4DBBFA" />

		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon.png" />
		<link rel="manifest" href="/site.webmanifest" />

		<!-- Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": type === "article" ? "Article" : "Organization",
			...(type === "article" ? {
				"headline": title,
				"description": description,
				"image": fullImageUrl,
				"author": {
					"@type": "Organization",
					"name": author || "PlayPhysio Team"
				},
				"publisher": {
					"@type": "Organization",
					"name": siteName,
					"logo": {
						"@type": "ImageObject",
						"url": new URL("/favicon.png", siteUrl).href
					}
				},
				"datePublished": publishedTime,
				"dateModified": modifiedTime || publishedTime,
				"mainEntityOfPage": {
					"@type": "WebPage",
					"@id": currentUrl
				}
			} : {
				"name": siteName,
				"description": description,
				"url": siteUrl,
				"logo": new URL("/favicon.png", siteUrl).href,
				"sameAs": [
					"https://twitter.com/playphysio",
					"https://linkedin.com/company/playphysio"
				],
				"contactPoint": {
					"@type": "ContactPoint",
					"contactType": "customer service",
					"availableLanguage": "English"
				}
			})
		})} />

		<!-- Google Analytics (replace with your tracking ID) -->
		<!--
		<script async src="https://www.googletagmanager.com/gtag/js?id=GA_TRACKING_ID"></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'GA_TRACKING_ID');
		</script>
		-->
	</head>
	<body>
		<div class="min-h-screen bg-gradient-to-b from-white to-playphysio-blue/5">
			<slot />
		</div>
	</body>
</html>

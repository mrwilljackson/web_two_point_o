---
// Highlight component - replaces WordPress [highlight] shortcode
export interface Props {
  color?: 'blue' | 'green' | 'yellow' | 'red' | 'purple' | 'pink' | 'indigo';
  class?: string;
}

const { color = 'yellow', class: className = '' } = Astro.props;

// Color mapping for different highlight types
const colorClasses = {
  yellow: 'bg-yellow-200 text-yellow-900 border-yellow-300',
  blue: 'bg-blue-200 text-blue-900 border-blue-300',
  green: 'bg-green-200 text-green-900 border-green-300',
  red: 'bg-red-200 text-red-900 border-red-300',
  purple: 'bg-purple-200 text-purple-900 border-purple-300',
  pink: 'bg-pink-200 text-pink-900 border-pink-300',
  indigo: 'bg-indigo-200 text-indigo-900 border-indigo-300',
};

const colorClass = colorClasses[color] || colorClasses.yellow;
---

<span class={`highlight ${colorClass} ${className}`}>
  <slot />
</span>

<style>
  .highlight {
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    border: 1px solid;
    font-weight: 600;
    display: inline;
    box-decoration-break: clone;
    -webkit-box-decoration-break: clone;
  }

  /* Ensure proper spacing when highlight spans multiple lines */
  .highlight {
    line-height: 1.6;
  }
</style>

---
// Individual Stat component - replaces WordPress [stat] shortcode
export interface Props {
  value: string;
  label: string;
  color?: 'cyan' | 'emerald' | 'purple' | 'blue' | 'green' | 'indigo' | 'pink' | 'yellow';
  class?: string;
}

const { value, label, color = 'blue', class: className = '' } = Astro.props;

// Color mapping for different stat types
const colorClasses = {
  cyan: 'stat-cyan',
  emerald: 'stat-emerald',
  purple: 'stat-purple',
  blue: 'stat-blue',
  green: 'stat-green',
  indigo: 'stat-indigo',
  pink: 'stat-pink',
  yellow: 'stat-yellow',
};

const colorClass = colorClasses[color] || colorClasses.blue;
---

<div class={`stat-card ${colorClass} ${className}`}>
  <div class="stat-value">{value}</div>
  <div class="stat-label">{label}</div>
</div>

<style>
  .stat-card {
    padding: 1.5rem;
    border-radius: 0.75rem;
    border: 1px solid;
    text-align: center;
    transition: all 0.3s ease;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    backdrop-filter: blur(10px);
  }

  /* Brand-specific stat card colors */
  .stat-cyan {
    background: linear-gradient(135deg, rgba(34, 211, 238, 0.08) 0%, rgba(77, 187, 250, 0.12) 100%);
    border-color: rgba(34, 211, 238, 0.2);
    color: #0e7490;
  }

  .stat-emerald {
    background: linear-gradient(135deg, rgba(88, 214, 141, 0.08) 0%, rgba(34, 197, 94, 0.12) 100%);
    border-color: rgba(88, 214, 141, 0.2);
    color: #166534;
  }

  .stat-purple {
    background: linear-gradient(135deg, rgba(155, 89, 182, 0.08) 0%, rgba(147, 51, 234, 0.12) 100%);
    border-color: rgba(155, 89, 182, 0.2);
    color: #7c2d12;
  }

  .stat-blue {
    background: linear-gradient(135deg, rgba(77, 187, 250, 0.08) 0%, rgba(59, 130, 246, 0.12) 100%);
    border-color: rgba(77, 187, 250, 0.2);
    color: #1e40af;
  }

  .stat-green {
    background: linear-gradient(135deg, rgba(88, 214, 141, 0.08) 0%, rgba(34, 197, 94, 0.12) 100%);
    border-color: rgba(88, 214, 141, 0.2);
    color: #166534;
  }

  .stat-indigo {
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.08) 0%, rgba(79, 70, 229, 0.12) 100%);
    border-color: rgba(99, 102, 241, 0.2);
    color: #3730a3;
  }

  .stat-pink {
    background: linear-gradient(135deg, rgba(255, 107, 129, 0.08) 0%, rgba(236, 72, 153, 0.12) 100%);
    border-color: rgba(255, 107, 129, 0.2);
    color: #be185d;
  }

  .stat-yellow {
    background: linear-gradient(135deg, rgba(244, 208, 63, 0.08) 0%, rgba(245, 158, 11, 0.12) 100%);
    border-color: rgba(244, 208, 63, 0.2);
    color: #92400e;
  }

  .stat-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 800;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.875rem;
    font-weight: 600;
    line-height: 1.25;
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .stat-card {
      padding: 1.25rem;
    }
    
    .stat-value {
      font-size: 2rem;
    }
    
    .stat-label {
      font-size: 0.8rem;
    }
  }
</style>

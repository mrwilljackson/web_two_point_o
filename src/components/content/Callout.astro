---
// Callout component - replaces WordPress [callout] shortcode
export interface Props {
  type?: 'info' | 'warning' | 'success' | 'error';
  title?: string;
  class?: string;
}

const { type = 'info', title, class: className = '' } = Astro.props;

// Type-specific styling
const typeStyles = {
  info: {
    class: 'callout-info',
    icon: 'ℹ️'
  },
  warning: {
    class: 'callout-warning',
    icon: '⚠️'
  },
  success: {
    class: 'callout-success',
    icon: '✅'
  },
  error: {
    class: 'callout-error',
    icon: '❌'
  }
};

const style = typeStyles[type];
---

<div class={`callout ${style.class} ${className}`}>
  {(title || style.icon) && (
    <div class="callout-header">
      <span class="callout-icon">{style.icon}</span>
      {title && <h4 class="callout-title">{title}</h4>}
    </div>
  )}
  <div class="callout-content">
    <slot />
  </div>
</div>

<style>
  .callout {
    border: 1px solid;
    border-radius: 0.75rem;
    padding: 1.5rem;
    margin: 2rem 0;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    backdrop-filter: blur(10px);
  }

  .callout-info {
    background: linear-gradient(135deg, rgba(77, 187, 250, 0.08) 0%, rgba(34, 211, 238, 0.12) 100%);
    border-color: rgba(77, 187, 250, 0.2);
    color: #1e40af;
  }

  .callout-warning {
    background: linear-gradient(135deg, rgba(244, 208, 63, 0.08) 0%, rgba(243, 156, 18, 0.12) 100%);
    border-color: rgba(243, 156, 18, 0.2);
    color: #92400e;
  }

  .callout-success {
    background: linear-gradient(135deg, rgba(88, 214, 141, 0.08) 0%, rgba(34, 197, 94, 0.12) 100%);
    border-color: rgba(88, 214, 141, 0.2);
    color: #166534;
  }

  .callout-error {
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.08) 0%, rgba(220, 38, 38, 0.12) 100%);
    border-color: rgba(239, 68, 68, 0.2);
    color: #991b1b;
  }

  .callout-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .callout-icon {
    font-size: 1.25rem;
    line-height: 1;
  }

  .callout-title {
    font-size: 1.125rem;
    font-weight: 700;
    margin: 0;
    line-height: 1.25;
  }

  .callout-content {
    line-height: 1.6;
  }

  .callout-content :global(p) {
    margin: 0;
  }

  .callout-content :global(p + p) {
    margin-top: 0.75rem;
  }

  .callout-content :global(strong) {
    font-weight: 700;
  }

  .callout-content :global(em) {
    font-style: italic;
  }

  .callout-content :global(ul),
  .callout-content :global(ol) {
    margin: 0.75rem 0;
    padding-left: 1.5rem;
  }

  .callout-content :global(li) {
    margin: 0.25rem 0;
  }

  @media (max-width: 768px) {
    .callout {
      padding: 1.25rem;
      margin: 1.5rem 0;
    }

    .callout-header {
      gap: 0.5rem;
      margin-bottom: 0.75rem;
    }

    .callout-icon {
      font-size: 1.125rem;
    }

    .callout-title {
      font-size: 1rem;
    }
  }
</style>

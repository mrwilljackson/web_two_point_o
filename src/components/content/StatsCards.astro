---
// StatsCards component - replaces WordPress [stats_cards] shortcode
export interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`stats-cards-container ${className}`}>
  <slot />
</div>

<style>
  .stats-cards-container {
    display: flex;
    flex-wrap: nowrap;
    gap: 1.5rem;
    margin: 2rem 0;
    padding: 0;
    align-items: stretch;
  }

  /* Ensure cards are equal width and don't wrap */
  .stats-cards-container > :global(*) {
    flex: 1;
    min-width: 0; /* Allows flex items to shrink below their content size */
  }

  @media (max-width: 768px) {
    .stats-cards-container {
      flex-direction: column;
      gap: 1rem;
      margin: 1.5rem 0;
    }
  }
</style>

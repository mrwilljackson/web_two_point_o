---
// KeyInsight component - replaces WordPress [key_insight] shortcode
export interface Props {
  icon?: string;
  title?: string;
  class?: string;
}

const { icon = 'ðŸ’¡', title = 'Key Insight', class: className = '' } = Astro.props;
---

<div class={`key-insight ${className}`}>
  <div class="key-insight-header">
    <span class="key-insight-icon">{icon}</span>
    <h4 class="key-insight-title">{title}</h4>
  </div>
  <div class="key-insight-content">
    <slot />
  </div>
</div>

<style>
  .key-insight {
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    border: 1px solid #f59e0b;
    border-radius: 0.75rem;
    padding: 1.5rem;
    margin: 2rem 0;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .key-insight-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .key-insight-icon {
    font-size: 1.5rem;
    line-height: 1;
  }

  .key-insight-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: #92400e;
    margin: 0;
    line-height: 1.25;
  }

  .key-insight-content {
    color: #92400e;
    line-height: 1.6;
  }

  .key-insight-content :global(p) {
    margin: 0;
  }

  .key-insight-content :global(p + p) {
    margin-top: 0.75rem;
  }

  .key-insight-content :global(strong) {
    font-weight: 700;
  }

  .key-insight-content :global(em) {
    font-style: italic;
  }

  @media (max-width: 768px) {
    .key-insight {
      padding: 1.25rem;
      margin: 1.5rem 0;
    }

    .key-insight-header {
      gap: 0.5rem;
      margin-bottom: 0.75rem;
    }

    .key-insight-icon {
      font-size: 1.25rem;
    }

    .key-insight-title {
      font-size: 1rem;
    }
  }
</style>
